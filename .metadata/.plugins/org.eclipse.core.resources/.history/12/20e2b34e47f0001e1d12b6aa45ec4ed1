		// Test data
		UUID orderId = UUID.randomUUID();
        List<OrderItem> items = new ArrayList<>();
        items.add(new OrderItem(orderId, 1L, 2, BigDecimal.valueOf(50)));
        
        Order order = new Order(orderId, items, "CREATED");
